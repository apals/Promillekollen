<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.promillekollen"
    android:versionCode="2"
    android:versionName="2" >

    <uses-sdk
        android:minSdkVersion="1"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/promille_ikon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.promillekollen.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.promillekollen.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="com.promillekollen.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.promillekollen.MainActivity" />
        </activity>
    </application>

</manifest>